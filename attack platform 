# Function to handle user input for main menu choices
handle_main_menu_choice() {
    local choice
    read -p "Enteryour choice: " choice
    case $choice in
        1) install_and_configure_mrholmes ;;
        2) run_or_stop_mrholmes ;;
        3) install_and_configure_mrphish ;;
        4) run_or_stop_mrphish ;;
        5) install_and_configure_fikrado ;;
        6) run_or_stop_fikrado ;;
        7) install_and_configure_fb_bruteforce ;;
        8) run_or_stop_fb_bruteforce ;;
        9) install_and_configure_impulse ;;
        10) run_or_stop_impulse ;;
        11) install_and_configure_phoneinfoga ;;
        12) run_or_stop_phoneinfoga ;;
        13) install_and_configure_set ;;
        14) run_or_stop_set ;;
        15) install_and_configure_metasploit ;;
        16) run_or_stop_metasploit ;;
        17) install_and_configure_tiger ;;
        18) run_or_stop_tiger ;;
        19) install_and_configure_lynis ;;
        20) run_or_stop_lynis ;;
        21) install_and_configure_maltego ;;
        22) run_or_stop_maltego ;;
        23) install_and_configure_misp ;;
        24) run_or_stop_misp ;;
        25) install_and_configure_mitre_attack_framework ;;
        26) run_or_stop_mitre_attack_framework ;;
        27) install_and_configure_clamav ;;
        28) run_or_stop_clamav ;;
        29) install_and_configure_tiger ;;
        30) run_or_stop_tiger ;;
        31) install_and_configure_lynis ;;
        32) run_or_stop_lynis ;;
        33) echo "Exiting..."; exit ;;
        *) echo "Invalid choice. Please enter a number between 1 and 33."; sleep 2 ;;
    esac
}

# Main function to run the script
main() {
    while true; do
        display_main_menu
        handle_main_menu_choice
    done
}

# Start the script
main